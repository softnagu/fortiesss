<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="416dp"
                android:layout_height="69dp"
                android:background="?attr/colorPrimary"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:minHeight="?attr/actionBarSize"
                android:paddingLeft="50dp"
                android:textAlignment="center"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Registration" />

            <ImageView
                android:id="@+id/bk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-45dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_white" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="-25dp"
                app:srcCompat="@drawable/ic_local_hospital_black_24dp" />

            <ImageView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="-25dp"
                app:srcCompat="@drawable/ic_notifications_black_24dp" />

            <ImageView
                android:id="@+id/find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="-24dp"
                app:srcCompat="@drawable/ic_search_black_24dp" />

            <ImageView
                android:id="@+id/profile"
                android:layout_width="fill_parent"
                android:layout_height="127dp"
                android:layout_above="@+id/button1"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_account" />

            <ImageView
                android:id="@+id/photo"
                android:layout_width="63dp"
                android:layout_height="44dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-50dp"
                app:srcCompat="@drawable/ic_menu_camera" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textColorHint="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.592"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lname"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="@+id/fname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fname"
        app:layout_constraintTop_toBottomOf="@+id/fname" />

    <EditText
        android:id="@+id/mobile"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="@+id/lname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lname"
        app:layout_constraintTop_toBottomOf="@+id/lname" />

    <EditText
        android:id="@+id/emergency"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Emergency Number"
        android:inputType="number"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="@+id/mobile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mobile"
        app:layout_constraintTop_toBottomOf="@+id/mobile" />

    <EditText
        android:id="@+id/mail"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email "
        android:inputType="textEmailAddress"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="@+id/emergency"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emergency"
        app:layout_constraintTop_toBottomOf="@+id/emergency" />

            <Spinner
                android:id="@+id/gender"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:addStatesFromChildren="false"
                android:clipChildren="false"
                app:layout_constraintStart_toStartOf="@+id/mail"
                app:layout_constraintTop_toBottomOf="@+id/mail" />

            <Spinner
                android:id="@+id/marital"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-40dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@+id/gender"
                app:layout_constraintTop_toBottomOf="@+id/gender" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Date Of Birth"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                app:layout_constraintEnd_toEndOf="@+id/mail"
                app:layout_constraintTop_toBottomOf="@+id/mail" />

            <EditText
                android:id="@+id/guardian"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-40dp"
                android:ems="10"
                android:hint="Guardian Name"
                android:inputType="textPersonName"
                android:textColorHint="#000"
                app:layout_constraintEnd_toEndOf="@+id/dob"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/marital"
                app:layout_constraintTop_toBottomOf="@+id/dob" />

    <EditText
        android:id="@+id/add1"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address1"
        android:inputType="textPersonName"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="@+id/guardian"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/marital"
        app:layout_constraintTop_toBottomOf="@+id/guardian" />

    <EditText
        android:id="@+id/add2"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address2"
        android:inputType="textPersonName"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="@+id/add1"
        app:layout_constraintStart_toStartOf="@+id/add1"
        app:layout_constraintTop_toBottomOf="@+id/add1" />

            <Spinner
                android:id="@+id/country"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/add2"
                app:layout_constraintTop_toBottomOf="@+id/add2" />

            <Spinner
                android:id="@+id/state"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-40dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/add2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/country"
                app:layout_constraintTop_toBottomOf="@+id/add2" />

            <Spinner
                android:id="@+id/city"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="@+id/country"
                app:layout_constraintTop_toBottomOf="@+id/country" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-40dp"
                android:ems="10"
                android:hint="Pincode"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColorHint="#000"
                app:layout_constraintEnd_toEndOf="@+id/state"
                app:layout_constraintStart_toEndOf="@+id/city"
                app:layout_constraintTop_toBottomOf="@+id/state" />

            <Button
                android:id="@+id/register"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:background="#2C7770"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="@+id/pincode"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/city"
                app:layout_constraintTop_toBottomOf="@+id/city" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="12dp"
                android:text="Already Existing User?"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-25dp"
                android:text="Click Here"
                android:textColor="#37753A"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/register" />

<!--            <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--                android:id="@+id/fab"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="bottom|end"-->
<!--                android:layout_margin="@dimen/fab_margin"-->
<!--                app:srcCompat="@android:drawable/ic_dialog_email" />-->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>